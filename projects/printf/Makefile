################################################################################
#                                     CONFIG                                   #
################################################################################
NAME		= libftprintf.a
CC 		= cc
CFLAGS	= -Wall -Wextra -Werror -MMD
AR		= ar -rcs

################################################################################
#                                 PROGRAM'S SRCS                               #
################################################################################

HEADER	= ft_printf.h

SRCS = ft_printf.c utils.c

################################################################################
#                                  Makefile  objs                              #
################################################################################

OBJS		= $(addprefix obj/, ${SRCS:.c=.o})
DEP			= $(addprefix obj/, ${SRC:.c=.d})

################################################################################
#                                 Makefile rules                               #
################################################################################

all: ${NAME}

-include $(DEP)


${NAME}:	${OBJS}
			$(AR) ${NAME} $(OBJS)

obj/%.o: %.c $(HEADER) Makefile
			mkdir -p $(dir $@)
			$(CC) $(CFLAGS) -c $< -o $@

clean:
			rm -rf obj

fclean:		clean
			rm -rf ${NAME}

re:			fclean all

.PHONY:		all clean fclean re bonus
